html, body{
  height: 100%;
  background: #f5f5f5;
}

[v-cloak] {
  display: none;
}

.g-wrap{
  display: flex;
  flex-flow: column;
  height: 100%;
}

.g-content{
  flex: 1;
}

header{
  height: $headerHeight;
}

footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: solid 1px #ddd;
  height: 40px;
  line-height: 40px;
  z-index: 1;
  background: #fff;
}
